<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>QUẢN LÝ HỘI VIÊN- DANH SÁCH HỘI VIÊN</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="./css2/bootstrap.min.css">
        <link rel="stylesheet" href="./css2/style.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="./js2/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="main-site">
            <header class="main-header">
                <h2>QUẢN LÝ HỘI VIÊN</h2>
                <div class="main-header-right">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownName" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= session.account.username%>
                          <i class="fas fa-angle-down"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownName">
                          <a class="dropdown-item" href="javascript(0)" 
                          data-toggle="modal" data-target="#modalChangePass">Đổi mật khẩu</a>
                          <a class="dropdown-item" href="/logout">Đăng xuất</a>
                        </div>
                    </div>
                </div>
            </header>
            <!-- main-header -->

            <section class="main-content">
                <div class="mk-minibar-menu">
                    <% if(session.group_ids == '2' || session.group_ids == '1' || session.group_ids == '3'){ %>
                        <a href="/reports" class="mk-minibar-menu-item">
                            <i class="fas fa-chart-line"></i>
                        </a>
                    <% } %>
                    <a href="/users" class="mk-minibar-menu-item active">
                        <i class="fas fa-child"></i>
                    </a>
                    <a href="/accounts" class="mk-minibar-menu-item">
                        <i class="fas fa-user-circle"></i>
                    </a>
                </div>
                <div class="mk-panel-tab-content">
                    <div class="tab-content-topbar">
                        <div class="bar-left">
                            <h6 class="mb-0">
                                Danh sách hội viên
                            </h6> 
                        </div>
                        <div class="bar-right">
                            <div class="text-right bar-right-item">
                                <strong class="mb-0 fs-12">Tổng số hội viên: <span class="color-brand-secondary"><%= data.length %></span></strong>
                            </div> 
                            <div class="bar-right-item">
                                <a href="/users/add" class="mk-btn mk-btn-primary">
                                    <i class="fas fa-plus"></i>
                                    Thêm mới hội viên
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="mk-product-filter">
                        <div class="mk-product-filter-dropdown mk-dropdowns-inline">
                            <strong>Phân loại theo:</strong>
                            <select class="form-select" aria-label="Default select example">
                                <option selected> Cấp bậc</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Đơn vị</option>
                                <option value="P1">P1</option>
                                <option value="P2">P2</option>
                                <option value="P3">P3</option>
                            </select>
                        </div>
                        <ul class="mk-product-filter-selected">
                            <li>
                                Cấp bậc:
                                <strong> 1</strong> 
                                <i class="fas fa-times"></i>
                            </li>
                            <li>
                                Đơn vị:
                                <strong> 1</strong> 
                                <i class="fas fa-times"></i>
                            </li>
                        </ul>
                    </div>
                    <div class="mk-product-wrap">
                        <div class="mk-header-checkall justify-content-start">
                            <div class="mk-custom-checkbox custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" 
                                value="true" id="__BVID__5316">
                                <label class="custom-control-label" for="__BVID__5316">
                                    <strong>Có
                                        <span class="color-brand-secondary">
                                        0
                                        hội viên
                                        </span>
                                    </strong>
                                </label>
                            </div>
                            <div class="mk-list-action">
                                <a title="Delete" class="item">
                                    <i class="fas fa-trash-alt"></i>
                                    <strong>Xóa hội viên</strong>
                                </a> 
                            </div>
                        </div>
                        <div class="mk-search-form">
                            <i class="fas fa-search"></i>
                            <input type="search" placeholder="Tìm kiếm theo <%= session.account.username%>" class="form-control">
                        </div>
                        <div id="mk-table" class="mk-table-list">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Họ và tên</th>
                                    <th scope="col">Cấp bậc</th>
                                    <th scope="col">Trình độ chuyên môn</th>
                                    <th scope="col">Đơn vị</th>
                                    <th scope="col">Chức vụ chuyên môn</th>
                                    <th scope="col">Thao tác</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% for (var i = 0 ; i < data.length ; i++){ %>
                                        <tr>
                                          <td>
                                              <div class="custom-control custom-checkbox">
                                                  <input type="checkbox" class="custom-control-input" id="customCheck1" checked>
                                              </div>
                                          </td>
                                          <td><%=data[i].name %></td>
                                          <td><%=data[i].capbac %></td>
                                          <td><%=data[i].level %></td>
                                          <td><%=data[i].donvi %></td>
                                          <td><%=data[i].title %></td>
                                          <td class="cell-operation cell-pinned">
                                              <div class="input-group input-group-options p-0 border-0">
                                                  <a title="Edit" href='/users/<%=data[i].id %>'' class="item active" >
                                                      <i class="fas fa-pen"></i>
                                                  </a>
                                                  <a title="Xóa" class="item mk-action-delete">
                                                      <i class="fas fa-trash-alt"></i>
                                                  </a> 
                                              </div>
                                          </td>
                                        </tr>
                                      <% } %>
                                </tbody>
                            </table>

                            <!-- Không  tim thấy hội viên -->
                            <!-- <div class="mk-search-notfound">
                                <i class="fas fa-child"></i><br>
                                <p>Không tìm thấy hội viên nào</p>
                            </div> -->
                        </div>
                        
                        <div class="pagination-wrap">
                            <ul  class="pagination mk-pagination b-pagination">
                                <li role="presentation" class="page-item active">
                                    <button class="page-link">1</button>
                                </li>
                                <li role="presentation" class="page-item">
                                    <button role="menuitemradio" type="button" class="page-link">2</button>
                                </li>
                            </ul> 
                        </div>
                    </div>
                </div>
            </section>
            <!-- main-content -->
        </div>

        <div class="modal fade" id="modalChangePass" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document" style="width: 500px;">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title">Đổi mật khẩu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="mk-form-group">
                        <label class="mk-label">Mật khẩu cũ </label>
                        <input type="text" placeholder="Nhập Mật khẩu cũ" class="form-control">
                    </div>
                    <div class="mk-form-group">
                        <label class="mk-label">Mật khẩu mới </label>
                        <input type="text" placeholder="Nhập Mật khẩu mới" class="form-control">
                    </div>
                    <div class="mk-form-group">
                        <label class="mk-label">Nhập lại mật khẩu </label>
                        <input type="text" placeholder="Nhập lại mật khẩu" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mk-btn mk-btn-secondary mr6" data-dismiss="modal"> <i class="fas fa-ban mr6"></i>Hủy bỏ</button>
                    <button type="button" class="mk-btn mk-btn-primary"><i class="fas fa-save mr6"></i> Lưu</button>
                </div>
            </div>
            </div>
        </div>
    </body>
</html>
