                            QUẢN LÝ HỘI VIÊN
                        </a>
                        <a class="nav-link active"
                        href="/accounts" >
                         <div class="sb-nav-link-icon"><i class="fas fa-user-alt"></i></div>
                         QUẢN LÝ TÀI KHOẢN
                     </a>
                        <a class="nav-link"
                           href="/reports">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            THÔNG KÊ
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">

                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 text-uppercase">Quản lý tài khoản</h1>
                    <div class="row py-4">
                        <!-- Actual search box -->
                        <!-- <div class="col-md">
                            <div class="mx-auto">
                                <div class="input-group">
                                    <input class="form-control rounded-2"
                                           type="search"
                                           placeholder="search"
                                           id="example-search-input" />
                                </div>
                            </div>
                        </div> -->

                        <!-- Another variation with a button -->
                        <div class="col-md text-end">
                            <a href="/accounts/add"
                               style="font-weight: 500; text-transform: uppercase"
                               title="thêm mới"
                               class="btn btn-primary">
                                Thêm mới
                            </a>
                        </div>


                    </div>

                    <div class="card mb-4">

                        <div class="">
                            <table class="
                    table
                    table-bordered
                    table-hover
                    table-striped
                    table-responsive
                  "
                                   id="datatablesSimple">
                                <thead style="text-align: center">
                                    <tr>
                                        <!-- <th>
                                            <input type="checkbox"
                                                   name=""
                                                   id="" />
                                        </th> -->
                                        <!-- <th>Mã hội viên</th> -->
                                        <th>Tên Tài khoản</th>
                                        <th>Nhóm quyền</th>
                                        <th>Khoá</th>
                                        <th>Mã hội viên</th>

                                        
                                    </tr>
                                </thead>

                                <tbody>
                                    <% for (var i = 0 ; i < data.length ; i++){ %>
                                    <tr>
                                        
                                        <td style="text-align: center"><%= data[i].username%></td>
                                        
                                        <td style="text-align: center">-</td>
                                        <td style="text-align: center"><%= data[i].active%></td>
                                        <td style="text-align: center"><%= data[i].userId%></td>
                                        <td style="text-align: center">
                                            <div class="">
                                                <button aria-expanded="false"
                                                        aria-haspopup="true"
                                                        class="btn btn-primary btn-sm"
                                                        data-toggle="dropdown"
                                                        type="button">
                                                    <i class="fa fa-bars"></i>
                                                </button>
                                                <div class="dropdown-menu"
                                                     x-placement="top-start"
                                                                            style="
                                                    position: absolute;
                                                    transform: translate3d(484px, 217px, 0px);
                                                    top: 0px;
                                                    left: 0px;
                                                    will-change: transform;
                                                    ">

                                                    <a class="dropdown-item"
                                                       href="/accounts/1"><i class="fa fa-eye"></i>&nbsp;Chi
                                                        tiết</a>
                                                    
                                                    
                                                    <a class="dropdown-item"
                                                       href="/accounts/1/edit"><i aria-hidden="true"
                                                           class="fa fa-save"></i>&nbsp;Cập nhật</a>
                                                    
                                                    
                                                    <a class="dropdown-item"
                                                       id="xoa"
                                                       onclick="xoa()"><i class="fa fa-trash-alt"></i>&nbsp;Xóa</a>
                                                    
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>

        </div>
        <!-- Button trigger modal -->

        <!-- Modal  sign out-->
        <div class="modal fade"
             id="exampleModal"
             tabindex="-1"
             aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-uppercase"
                            id="exampleModalLabel">Đăng xuất</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">Bạn chắc chắn muốn đăng xuất ?</div>
                    <div class="modal-footer">
                        <a type="button"
                           class="btn btn-secondary"
                           data-bs-dismiss="modal">Đóng</a>
                        <a href="/logout"
                           type="button"
                           class="btn btn-primary">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- end modal -->

        <!-- Modal  change password-->
        <form class="modal fade"
                action="/password"
                method="POST"
             id="changePassword"
             tabindex="-1"
             aria-labelledby="changePasswordlLabel"
             aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-uppercase"
                            id="changePasswordlLabel">
                            Đổi mật khẩu
                        </h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md">
                                <div class="pb-3">
                                    <label class="pb-2">Mật khẩu hiện tại</label>
                                    <div class="form-group pass_show">
                                        <input type="password"
                                            name="pass"
                                               value=""
                                               class="form-control"
                                               placeholder="faisalkhan@123" />
                                    </div>
                                </div>
                                <div class="pb-3">
                                    <label class="pb-2">Mật khẩu mới</label>
                                    <div class="form-group pass_show">
                                        <input type="password"
                                                name="passNew"
                                               class="form-control"
                                               placeholder="*******" />
                                    </div>
                                </div>
                                <div class="pb-3">
                                    <label class="pb-2">Xác nhận mật khẩu</label>
                                    <div class="form-group pass_show">
                                        <input type="password"
                                                name="passNew1"
                                               class="form-control"
                                               placeholder="*******" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button"
                           class="btn btn-secondary"
                           data-bs-dismiss="modal" value="Đóng"></input>
                        <input type="submit"
                           class="btn btn-primary" value="Xác nhận"></input>
                    </div>
                </div>
            </div>
        </form>

        <!-- end modal -->
    </div>

